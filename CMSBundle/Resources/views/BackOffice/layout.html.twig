<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
        <title>{% block title %}PHPOrchestra{% endblock %}</title>
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        {% block stylesheets %}
            {% if app.debug %}
                {% stylesheets 'built/all.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% else %}
                {% stylesheets 'built/all.min.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% endif %}
        {% endblock %}
        {#{% include 'PHPOrchestraCMSBundle:BackOffice/Include:headFiles.html.twig' %}#}

    </head>
    <body class="fixed-header fixed-navigation fixed-ribbon desktop-detected">

        <!-- HEADER -->
        {% include 'PHPOrchestraCMSBundle:BackOffice/Include:header.html.twig' %}
        <!-- END HEADER -->
        
        <!-- Left panel : Navigation area -->
        {% include 'PHPOrchestraCMSBundle:BackOffice/Include:leftMenu.html.twig' %}
        <!-- END NAVIGATION -->
        
        <!-- MAIN PANEL -->
        <div id="main" role="main">
            
            <!-- RIBBON -->
            {% include 'PHPOrchestraCMSBundle:BackOffice/Include:ribbon.html.twig' %}
            <!-- END RIBBON -->
            
            <!-- MAIN CONTENT -->
            <div id="content"></div>
            <!-- END MAIN CONTENT -->
            
        </div>
        
        <!--================================================== -->

        {% block javascripts %}
            {% if app.debug %}
                {% javascripts 'built/all.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% else %}
                {% javascripts 'built/all.min.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endif %}
        {% endblock %}
        {#{% include 'PHPOrchestraCMSBundle:BackOffice/Include:bottomFiles.html.twig' %}#}
        
    </body>
    
</html>
