{% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

{% set class = form.vars.attr.class|default('') %}
{% if form.vars.disabled is defined and form.vars.disabled %}
    {% set class = class ~ ' form-disabled' %}
{% endif %}

{% if title is defined %}
    {% set attr = {'class': class, 'data-title': title} %}
{% else %}
    {% set attr = {'class': class} %}
{% endif %}

{% block form %}
    {{ form(form, {'style': 'horizontal', 'label_col': 3, 'widget_col': 9, 'attr' : attr}) }}
{% endblock %}
