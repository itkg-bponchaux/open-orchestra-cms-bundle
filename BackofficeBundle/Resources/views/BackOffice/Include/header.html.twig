    <!-- pulled right: nav area -->
    <div class="pull-right">

        <!-- collapse menu button -->
        <div id="hide-menu" class="btn-header pull-right">
            <span> <a href="javascript:void(0);" data-action="toggleMenu" title="{{ 'php_orchestra_cms.top_menu.collapse_menu'|trans({}, 'backOffice') }}"><i class="fa fa-reorder"></i></a> </span>
        </div>
        <!-- end collapse menu -->

        {% include 'PHPOrchestraBackofficeBundle:BackOffice/Include/Header:mobileProfile.html.twig' %}

        <!-- logout button -->
        <div id="logout" class="btn-header transparent pull-right">
            <span> <a href="{{ url('fos_user_security_logout') }}" title="{{ 'php_orchestra_cms.top_menu.sign_out'|trans({}, 'backOffice') }}" data-action="userLogout" data-logout-msg="{{ 'php_orchestra_cms.top_menu.improve_security'|trans({}, 'backOffice') }}"><i class="fa fa-sign-out"></i></a> </span>
        </div>
        <!-- end logout button -->

        <!-- search mobile button (this is hidden till mobile view port) -->
        <div id="search-mobile" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0)" title="*Search*"><i class="fa fa-search"></i></a> </span>
        </div>
