                <i class="fa fa-search"></i>
            </button>
            <a href="javascript:void(0);" id="cancel-search-js" title="Annuler"><i class="fa fa-times"></i></a>
        </form>
        <!-- end input: search field -->

        <!-- fullscreen button -->
        <div id="fullscreen" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0);" data-action="launchFullscreen" title="{{ 'php_orchestra_cms.top_menu.fullscreen'|trans({}, 'backOffice') }}"><i class="fa fa-arrows-alt"></i></a> </span>
        </div>
        <!-- end fullscreen button -->

        {% include 'PHPOrchestraBackofficeBundle:BackOffice/Include/Header:voiceCommand.html.twig' %}

        {% include 'PHPOrchestraBackofficeBundle:BackOffice/Include/Header:languageDropdown.html.twig' %}

