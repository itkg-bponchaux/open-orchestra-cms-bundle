{% include 'OpenOrchestraBackofficeBundle:BackOffice:Underscore/Jarvis/header._tpl.twig' %}

<div role="container" class="tableviewCollectionTable">
<table id="tableviewCollectionTable" class="table table-striped table-bordered table-hover smart-form dataTable">
        <thead>
            <tr>
                <% _.each(displayedElements, function(displayedElement) { %>
                    <th><%= displayedElement %></th>
                <% }); %>
                <th></th>
            </tr>
            <tr class="second">
                <% _.each(displayedElements, function(displayedElement) { %>
                  <td>
                    <label class="input">
                        <input class='search-column search_init' type="text" placeholder="Search <%= displayedElement %>" >
                    </label>
                  </td>
                <% }); %>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% if (message != undefined && message != "") { %>
            <div class="alert alert-success">
                <%= message  %>
            </div>
        <% } %>
        </tbody>
    </table>
</div>

