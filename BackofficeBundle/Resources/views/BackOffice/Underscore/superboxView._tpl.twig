{% include 'OpenOrchestraBackofficeBundle:BackOffice:Underscore/Jarvis/header._tpl.twig' %}

<div>
    <ul class="nav nav-tabs" role="tablist" id="superboxTab">
        <li class="active">
            <a href="#tab-crop" role="tab" data-toggle="tab">{{ 'open_orchestra_backoffice.media.crop'|trans }}</a>
        </li>
        <li>
            <a href="#tab-meta" role="tab" data-toggle="tab">{{ 'open_orchestra_backoffice.media.meta'|trans }}</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="tab-crop">

            <!-- FORMAT SELECTOR  -->
            <div class="media_crop_form"></div>

            <!-- CROPPED VERSION IN USAGE -->
            <div class="form-group form-horizontal">
                <label class="control-label col-lg-3">{{ 'open_orchestra_backoffice.media.current_preview'|trans }}</label>
                <div class="col-lg-9 media_crop_preview" />
                <label class="control-label col-lg-3" />
                <div class="col-lg-9 media_format_actions" style="display:none;">
                    <a href="javascript:void(0);" class="btn btn-success" id="crop_action_button"><i class="fa fa-crop"></i> {{ 'open_orchestra_backoffice.form.media.manual_crop'|trans }}</a>
                    <a href="javascript:void(0);" class="btn btn-success" id="upload_action_button"><i class="fa fa-upload"></i> {{ 'open_orchestra_backoffice.form.media.alternative_file'|trans }}</a>
                </div>
            </div>

            <!-- CROP TOOL -->
            <div id="original-image" style="display:none">
                <img src="<%= media.get('displayed_image') %>" class="superbox-current-img"/>
                <a href="javascript:void(0);" class="btn btn-primary" id="crop_button"> {{ 'open_orchestra_backoffice.form.media.crop'|trans }}</a>
            </div>

            <!-- UPLOAD ALTERNATIVE CROPPED VERSION -->
            <div class="media-override-format-form" style="display:none"></div>

        </div>
        <div class="tab-pane" id="tab-meta">
            <div class="media_meta_form"></div>
        </div>
    </div>

    {% include 'OpenOrchestraBackofficeBundle:BackOffice:Underscore/backToList.html.twig' %}
</div>

{% include 'OpenOrchestraBackofficeBundle:BackOffice:Underscore/Jarvis/footer._tpl.twig' %}
